<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication.DARK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>
    <style name="DECOLOR">

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="android:windowBackground">@color/backgroundDark</item>

    </style>
    <style name="BoxColor">
        <item name="android:background">#333333</item> <!-- Nền xám đậm -->
        <item name="android:textColor">#FFFFFF</item> <!-- Màu chữ trắng -->
        <item name="android:textColorHint">#BBBBBB</item> <!-- Màu gợi ý xám nhạt -->
        <item name="android:textCursorDrawable">@drawable/cursor_dark</item>
    </style>
    <style name="Switch">
        <item name="android:thumbTint">@color/switchThumbOnColorDark</item>
        <item name="android:trackTint">@color/switchTrackOnColorDark</item>
    </style>
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Màu đen cho text -->
        <item name="android:textSize">16sp</item> <!-- Kích thước chữ -->
        <item name="android:padding">8dp</item> <!-- Padding -->
    </style>
    <style name="edittext">
        <item name="android:textColor">#FFFFFF</item> <!-- Màu đen cho text -->
    </style>
</resources>