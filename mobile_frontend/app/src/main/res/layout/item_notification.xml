<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/DECOLOR">
    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/DECOLOR">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/avt_2" style="@style/DECOLOR"/>
        <TextView
                style="@style/DECOLOR"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_user"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"

                android:text="cái gì đó"/>

        <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tv_name"
                style="@style/DECOLOR"
                android:layout_centerVertical="true"
                android:text="đã thích một bài viết của bạn rất nhiều lần cái này "
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_name"
                android:layout_alignBottom="@id/img_user"
                android:text="26 thg 4 lúc 11:13"
                style="@style/DECOLOR"
                android:textSize="13sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
